# TruthLens Environment Variables
# ================================
# Copy this file to .env and fill in your values
# Author: 102012dl

# ===== Database =====
POSTGRES_USER=truthlens
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=truthlens
DATABASE_URL=postgresql://truthlens:your_secure_password_here@localhost:5432/truthlens

# ===== Redis =====
REDIS_URL=redis://localhost:6379

# ===== Security =====
SECRET_KEY=your_super_secret_key_at_least_32_characters
NEXTAUTH_SECRET=your_nextauth_secret_key
NEXTAUTH_URL=http://localhost:3000

# ===== Telegram Bot =====
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_from_botfather

# ===== LLM/AI APIs =====
OPENAI_API_KEY=your_openai_api_key
# Or use Abacus.AI
ABACUSAI_API_KEY=your_abacusai_api_key

# ===== MLOps (Optional) =====
MLFLOW_TRACKING_URI=http://localhost:5000
WANDB_API_KEY=your_wandb_api_key

# ===== Environment =====
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# ===== Rate Limiting =====
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_DAY=1000
